extends ../layouts/admin

block content
  div(class="max-w-4xl w-full mx-auto p-8 bg-gray-800 rounded-lg shadow-lg")
    h2(class="text-lg md:text-2xl font-bold text-center mb-10 text-white")=page

    form(action="" method="" class="space-y-8")
      div(class="space-y-4")
        label(form="name" class="block text-sm text-gray-400 font-semibold") Nombre
        input(type="text" name="name" id="name" class="w-full px-4 py-2 bg-gray-700 rounded-lg placeholder-gray-400 outline-none text-gray-300 focus:ring-2 focus:ring-red-500 " placeholder="Nombre del cliente")

        label(form="last_name" class="block text-sm text-gray-400 font-semibold") Apellido
        input(type="text" id="last_name" name="last_name" class="w-full px-4 py-2 bg-gray-700 rounded-lg placeholder-gray-400 outline-none text-gray-300 focus:ring-2 focus:ring-red-500 " placeholder="Apellido del cliente")

        label(form="email" class="block text-sm text-gray-400 font-semibold") Email
          small.ml-1 (Opcional)
        input(type="email" id="email" name="email" class="w-full px-4 py-2 bg-gray-700 rounded-lg placeholder-gray-400 outline-none text-gray-300 focus:ring-2 focus:ring-red-500 " placeholder="Email del cliente")


        label(form="phone" class="block text-sm text-gray-400 font-semibold") Teléfono
        input(type="phone" id="phone" name="phone" class="w-full px-4 py-2 bg-gray-700 rounded-lg placeholder-gray-400 outline-none text-gray-300 focus:ring-2 focus:ring-red-500 " placeholder="Teléfono del cliente")

        label(form="address" class="block text-sm text-gray-400 font-semibold") Dirección
          small.ml-1 (Opcional)
        textArea(type="address" id="address" name="address" class="w-full px-4 py-2 bg-gray-700 rounded-lg placeholder-gray-400 outline-none text-gray-300 focus:ring-2 focus:ring-red-500 " placeholder="Dirección del cliente")
      div(class="flex flex-col md:flex-row gap-4 justify-center items-center")
        button(type="button" class="w-full md:w-3/6 cursor-pointer font-bold bg-red-600  hover:bg-red-800 text-white text-sm md:text-xl p-[7px] rounded-lg shadow-lg hover:shadow-gray-600 hover:scale-90 transition-all duration-300") Cancelar

        input(type="submit" class=" w-full md:w-3/6 cursor-pointer font-bold bg-gray-700 hover:bg-indigo-700 text-white text-sm md:text-xl rounded-lg shadow-lg hover:shadow-gray-700  hover:scale-90 p-[10px] transition-all duration-300" value="Crear Cliente")







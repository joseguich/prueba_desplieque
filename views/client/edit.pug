extends ../layouts/admin

block content
  div(class="max-w-4xl w-full mx-auto p-8 bg-gray-800 rounded-lg shadow-lg")
    h2(class="text-base md:text-4xl font-bold text-center mb-10 text-white")=page

    form(method="POST" class="space-y-8" novalidate)
      input(type="hidden" name="_csrf" value=csrfToken)
      div( class="space-y-4")
        label(form="name" class="block text-sm text-gray-400 font-semibold") Nombre
        input(type="text" name="name" id="name" class="w-full px-4 py-2 bg-gray-700 rounded-lg placeholder-gray-400 outline-none text-gray-300 focus:ring-2 focus:ring-red-500 " placeholder="Nombre del cliente" value=client.name)
        if errors
          span(class="text-red-500 text-xs mx-2")=errors.name ? errors.name.msg : ""

        label(form="last_name" class="block text-sm text-gray-400 font-semibold") Apellido
        input(type="text" id="last_name" name="last_name" class="w-full px-4 py-2 bg-gray-700 rounded-lg placeholder-gray-400 outline-none text-gray-300 focus:ring-2 focus:ring-red-500 " placeholder="Apellido del cliente" value=client ? client.last_name : "")
        if errors
          span(class="text-red-500 text-xs mx-2")=errors.last_name ? errors.last_name.msg : ""

        label(form="email" class="block text-sm text-gray-400 font-semibold") Email
          small.ml-1 (Opcional)
        input(type="email" id="email" name="email" class="w-full px-4 py-2 bg-gray-700 rounded-lg placeholder-gray-400 outline-none text-gray-300 focus:ring-2 focus:ring-red-500 " placeholder="Email del cliente" value=client ? client.email : "")
        if errors
          span(class="text-red-500 text-xs mx-2")=errors.email ? errors.email.msg : ""


        label(form="phone" class="block text-sm text-gray-400 font-semibold") Teléfono
        input(type="phone" id="phone" name="phone" class="w-full px-4 py-2 bg-gray-700 rounded-lg placeholder-gray-400 outline-none text-gray-300 focus:ring-2 focus:ring-red-500 " placeholder="Teléfono del cliente" value=client ? client.phone : "")
        if errors
          span(class="text-red-500 text-xs mx-2")=errors.phone ? errors.phone.msg : ""

        label(form="address" class="block text-sm text-gray-400 font-semibold") Dirección
          small.ml-1 (Opcional)
        textArea( id="address" name="address" class="w-full px-4 py-2 bg-gray-700 rounded-lg placeholder-gray-400 outline-none text-gray-300 focus:ring-2 focus:ring-red-500" maxlength="100" placeholder="Dirección del cliente")=client ? client.address : ""
        p(id="count" class="flex justify-end relative bottom-12  text-gray-400 text-xs mx-4") 0 / 100

      div(class="flex flex-col md:flex-row gap-4 justify-center items-center")
        button(type="button" id="cancelar-edit" class="w-full md:w-3/6 cursor-pointer font-bold bg-red-600  hover:bg-red-800 text-white text-sm md:text-xl p-[7px] rounded-lg shadow-lg hover:shadow-gray-600 hover:scale-90 transition-all duration-300") Cancelar

        input(type="submit" class=" w-full md:w-3/6 cursor-pointer font-bold bg-gray-700 hover:bg-indigo-700 text-white text-sm md:text-xl rounded-lg shadow-lg hover:shadow-gray-700  hover:scale-90 p-[10px] transition-all duration-300" value="Crear Cliente")






extends ../layouts/admin

block content
  div(class="max-w-4xl mx-auto bg-gray-800 p-8 rounded-lg shadow-lg")
    h2(class="text-base md:text-4xl font-bold text-center text-white mb-12")=page

    form(action="/device/model" method="POST" class="grid grid-rows-auto gap-6 ")
      input(type="hidden" name="_csrf" value=csrfToken)
      div(class="grid grid-cols-1 md:grid-cols-1 gap-6")
        div 
          label(for="name" class="block text-gray-300 font-semibold mb-2") Modelo del Equipo
          input(type="text" name="name" id="name" class="w-full px-4 py-3 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 text-sm focus:ring-red-600" placeholder="Escriba el modelo del equipo" value=model.name ? model.name : "")
          if errors
            span(class="text-red-500 text-xs mx-2")=errors.name ? errors.name.msg : ""


      div(class="flex flex-col md:flex-row gap-4 justify-center items-center mt-2 md:mt-5")
        button(type="button" id="cancelar-create" class="w-full md:w-3/6 cursor-pointer font-bold bg-red-600 hover:bg-red-800 text-white text-sm md:text-xl p-[7px] rounded-lg shadow-lg hover:shadow-gray-600 hover:scale-90 transition-all duration-300") Cancelar    
        input(type="submit" class=" w-full md:w-3/6 cursor-pointer font-bold bg-gray-700 hover:bg-indigo-700 text-white text-sm md:text-xl rounded-lg shadow-lg hover:shadow-gray-700  hover:scale-90 p-[10px] transition-all duration-300" value="Crear Modelo")
